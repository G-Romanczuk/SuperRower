@model SuperRowerDB.Transaction

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Wynajmij SuperRower!</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="CustomerIF" class="control-label">Numer Klienta - możliwośc sprawdzenia w tabeli Klienci</label>
                <input asp-for="CustomerIF" class="form-control" />
                <span asp-validation-for="CustomerIF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RowerPriceIF" class="control-label">Numer roweru - możliwość sprawdzenia w tabeli Ceny</label>
                <input asp-for="RowerPriceIF" class="form-control" />
                <span asp-validation-for="RowerPriceIF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RowerRentIF" class="control-label">Typ roweru - dostępne rowery pokazane w tabeli Typy rowerów</label>
                <input asp-for="RowerRentIF" class="form-control" />
                <span asp-validation-for="RowerRentIF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Data początku wynajmu</label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label">Data końca wynajmu</label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj!" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
